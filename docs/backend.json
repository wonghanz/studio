
{
  "entities": {
    "Case": {
      "title": "Case",
      "description": "A mystery investigation case.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "difficulty": { "type": "string" },
        "summary": { "type": "string" },
        "category": { "type": "string" }
      },
      "required": ["id", "title", "difficulty"]
    },
    "CaseProgress": {
      "title": "Case Progress",
      "description": "User progress for a specific case.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "caseId": { "type": "string" },
        "unlockedMissions": { "type": "array", "items": { "type": "string" } },
        "currentMissionId": { "type": "string" },
        "completionStatus": { "type": "string", "enum": ["in-progress", "completed"] },
        "detectiveRank": { "type": "string" }
      }
    },
    "WritingAttempt": {
      "title": "Writing Attempt",
      "description": "A record of a user's writing practice attempt across all modes.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "mode": { "type": "string", "enum": ["standard", "mystery", "journey"] },
        "contentId": { "type": "string" },
        "level": { "type": "string" },
        "title": { "type": "string" },
        "userText": { "type": "string" },
        "bandScore": { "type": "string" },
        "feedback": { "type": "string" },
        "strengths": { "type": "array", "items": { "type": "string" } },
        "weaknesses": { "type": "array", "items": { "type": "string" } },
        "improvementHints": { "type": "array", "items": { "type": "string" } },
        "modelAnswer": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "mode", "userText", "bandScore", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/cases/{caseId}": {
      "schema": "Case",
      "description": "Collection of all available mystery cases."
    },
    "/users/{userId}/caseProgress/{caseId}": {
      "schema": "CaseProgress",
      "description": "Tracking user progress for mystery cases."
    },
    "/users/{userId}/writingHistory/{attemptId}": {
      "schema": "WritingAttempt",
      "description": "Detailed history of all writing attempts including mystery, journey, and standard."
    }
  }
}
